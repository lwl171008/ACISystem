<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/NM"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="你不是管理员用户"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/qmui_config_color_red"/>
        <LinearLayout
            android:id="@+id/Ly"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加比赛"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="题目:"
                            android:textSize="25dp"/>
                        <EditText
                            android:id="@+id/Atitile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:hint="请输入题目"
                            android:maxLines="2"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报名人数："
                            android:textSize="25dp"/>
                        <EditText
                            android:id="@+id/APeople"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:inputType="number"
                            android:hint="报名人数"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内容:"
                            android:textSize="25dp"/>
                        <EditText
                            android:background="@color/qmui_config_color_10_pure_black"
                            android:id="@+id/AContext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20dp"
                            android:hint="请输入内容"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/Fabu"
                        android:layout_marginTop="5dp"
                        android:background="#9393ec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="发布"
                        android:textColor="@color/btn_filled_blue_bg_normal"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="题目："
                    android:gravity="right"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_weight="4"
                    android:id="@+id/DeleteTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"

                    android:hint="请输入内容"
                    android:gravity="center_horizontal"/>
                <Button
                    android:id="@+id/deleteBt"
                    android:background="@color/qmui_config_color_background_pressed"
                    android:textColor="@color/qmui_s_switch_text_color"
                    android:layout_weight="1.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="删除"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>